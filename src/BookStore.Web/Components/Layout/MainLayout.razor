@inherits LayoutComponentBase

<MudLayout>
    <BookStore.Web.Components.Shared.LogEnricher/>
    <MudAppBar Elevation="0" Style="backdrop-filter: blur(8px); border-bottom: 1px solid rgba(0,0,0,0.08);">
        <MudTooltip Text="Toggle Navigation" Arrow="true" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" aria-label="Toggle Navigation"/>
        </MudTooltip>

        @if (!string.IsNullOrEmpty(TenantService.CurrentTenantLogoUrl))
        {
            <img src="@TenantService.CurrentTenantLogoUrl" alt="@TenantService.CurrentTenantName"
                 style="height:34px; max-width:160px; object-fit:contain; margin-left:8px;"
                 onerror="this.style.display='none'"/>
        }
        else
        {
            <MudText Typo="Typo.h6" Class="ml-2 fw-semibold" Style="letter-spacing: -0.02em;">
                @if (TenantService.IsLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2"/>
                }
                @TenantService.CurrentTenantName
            </MudText>
        }

        <MudSpacer/>

        <MudTooltip Text="Switch Tenant" Arrow="true" Placement="Placement.Bottom" Disabled="@_isTenantMenuOpen">
            <MudMenu @bind-Open="@_isTenantMenuOpen" Icon="@Icons.Material.Filled.Business" Color="Color.Inherit" Class="mr-1" aria-label="Switch Tenant">
                @foreach (var tenant in TenantService.AvailableTenants)
                {
                    <MudMenuItem OnClick="@(() => SwitchTenant(tenant.Id))">@tenant.Name</MudMenuItem>
                }
            </MudMenu>
        </MudTooltip>
        <BookStore.Web.Components.Shared.CurrencySelector/>
        <BookStore.Web.Components.Shared.ThemeSwitcher/>
        <LoginDisplay/>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="0" Variant="DrawerVariant.Mini"
               Style="border-right: 1px solid rgba(0,0,0,0.06); transition: width 0.25s ease;">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 pb-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@inject CurrencyService CurrencyService
@inject TenantService TenantService
@inject NavigationManager Navigation
@implements IDisposable

@code {
    bool _drawerOpen = false;
    bool _isTenantMenuOpen;

    void ToggleDrawer() => _drawerOpen = !_drawerOpen;

    void SwitchTenant(string tenantId)
    {
        Navigation.NavigateTo($"/?tenant={tenantId}", forceLoad: true);
    }

    protected override async Task OnInitializedAsync()
    {
        TenantService.OnChange += StateHasChanged;
        await TenantService.InitializeAsync();
        await CurrencyService.InitializeAsync();
    }

    public void Dispose()
    {
        TenantService.OnChange -= StateHasChanged;
    }

}
