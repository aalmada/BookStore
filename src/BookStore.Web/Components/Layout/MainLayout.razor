@inherits LayoutComponentBase

<MudLayout>
    <BookStore.Web.Components.Shared.LogEnricher/>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudText Typo="Typo.h5" Class="ml-3">
            @if (TenantService.IsLoading)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2"/>
            }
            @TenantService.CurrentTenantName
        </MudText>
        <MudSpacer/>
        <MudMenu Icon="@Icons.Material.Filled.Business" Color="Color.Inherit" Class="mr-2">
            @foreach (var tenant in TenantService.AvailableTenants)
            {
                <MudMenuItem OnClick="@(() => SwitchTenant(tenant.Id))">@tenant.Name</MudMenuItem>
            }
        </MudMenu>
        <MudSelect T="string" Value="@CurrencyService.CurrentCurrency" ValueChanged="CurrencyService.SetCurrencyAsync"
                   Style="width: 100px;" Class="mr-4" Variant="Variant.Outlined" Margin="Margin.Dense" Dense="true">
            <MudSelectItem Value="@("USD")">USD</MudSelectItem>
            <MudSelectItem Value="@("EUR")">EUR</MudSelectItem>
            <MudSelectItem Value="@("GBP")">GBP</MudSelectItem>
        </MudSelect>
        <LoginDisplay/>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu/>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@inject CurrencyService CurrencyService
@inject TenantService TenantService
@inject NavigationManager Navigation
@implements IDisposable

@code {
    bool _drawerOpen = true;

    void ToggleDrawer() => _drawerOpen = !_drawerOpen;

    void SwitchTenant(string tenantId)
    {
        Navigation.NavigateTo($"/?tenant={tenantId}", forceLoad: true);
    }

    protected override async Task OnInitializedAsync()
    {
        TenantService.OnChange += StateHasChanged;
        await TenantService.InitializeAsync();
        await CurrencyService.InitializeAsync();
    }

    public void Dispose()
    {
        TenantService.OnChange -= StateHasChanged;
    }

}
