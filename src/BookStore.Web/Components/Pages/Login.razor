@page "/login"
@using BookStore.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@using BookStore.Shared.Validation
@using BookStore.Shared.Models
@inject AuthenticationService AuthService
@inject TenantService TenantService
@inject PasskeyService PasskeyService
@inject JwtAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime Js
@inject ILogger<Login> Logger
@inject ErrorLocalizationService ErrorLocalizer


<PageTitle>Login - BookStore</PageTitle>

<div class="auth-page">
<MudGrid Spacing="0" Style="min-height: calc(100vh - 64px);">
    @* ─── Left Brand Panel ───────────────────────────────────────────── *@
    <MudItem xs="12" md="6"
             Style="@($"background: linear-gradient(160deg, {TenantService.CurrentTenantPrimaryColor} 0%, {TenantService.CurrentTenantSecondaryColor} 100%); display: flex; align-items: center; justify-content: center; padding: 3rem;")">
        <MudStack AlignItems="AlignItems.Center" Spacing="4" Style="text-align: center;">
            @if (!string.IsNullOrEmpty(TenantService.CurrentTenantLogoUrl))
            {
                <img src="@TenantService.CurrentTenantLogoUrl" alt="@TenantService.CurrentTenantName"
                     style="max-height: 80px; object-fit: contain;"
                     onerror="this.style.display='none'"/>
            }
            else
            {
                <MudIcon Icon="@Icons.Material.Filled.MenuBook" Style="font-size: 5rem; color: rgba(255,255,255,0.9);"/>
            }
            <MudText Typo="Typo.h3" Style="color: #fff; font-weight: 700; letter-spacing: -0.02em;">
                @TenantService.CurrentTenantName
            </MudText>
            @if (!string.IsNullOrEmpty(TenantService.CurrentTenantTagline))
            {
                <MudText Typo="Typo.h6" Style="color: rgba(255,255,255,0.8); font-weight: 400; max-width: 340px;">
                    @TenantService.CurrentTenantTagline
                </MudText>
            }
        </MudStack>
    </MudItem>

    @* ─── Right Form Panel ──────────────────────────────────────────── *@
    <MudItem xs="12" md="6" Style="display: flex; align-items: center; justify-content: center; padding: 3rem;">
        <MudPaper Elevation="0" Class="pa-8" Style="width: 100%; max-width: 480px; border-radius: 16px;">
            <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-2" Style="font-weight: 700;">
                <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Medium" Class="mr-2"/>
                Welcome back
            </MudText>
            <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary" Class="mb-6">
                Sign in to continue to @TenantService.CurrentTenantName
            </MudText>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="mb-4">
                @errorMessage
                @if (showResendVerification)
                {
                    <br/>
                    <MudLink OnClick="HandleResendVerification" Color="Color.Inherit" Underline="Underline.Always" Class="mt-2" style="cursor: pointer; font-weight: bold;">Resend verification email</MudLink>
                }
            </MudAlert>
        }

        @if (!string.IsNullOrEmpty(resendMessage))
        {
            <MudAlert Severity="Severity.Success" Class="mb-4" ContentAlignment="HorizontalAlignment.Center">@resendMessage</MudAlert>
        }

        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="px-4 py-6">
            <MudTabPanel Text="Standard" Icon="@Icons.Material.Filled.Email">
                <MudForm @ref="form">
                    <MudTextField @bind-Value="email"
                                  Label="Email"
                                  Variant="Variant.Outlined"
                                  Required="true"
                                  RequiredError="Email is required"
                                  Validation="@(new Func<string, string?>(ValidateEmail))"
                                  Class="mb-4"/>

                    <MudTextField @bind-Value="password"
                                  Label="Password"
                                  Variant="Variant.Outlined"
                                  InputType="@PasswordInput"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@PasswordInputIcon"
                                  OnAdornmentClick="TogglePasswordVisibility"
                                  AdornmentAriaLabel="@PasswordAriaLabel"
                                  Required="true"
                                  RequiredError="Password is required"
                                  Class="mb-4"/>

                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               FullWidth="true"
                               Size="Size.Large"
                               OnClick="HandleLogin"
                               Disabled="isLoading"
                               Class="mb-4">
                        @if (isLoading)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2"/>
                            <span>Logging in...</span>
                        }
                        else
                        {
                            <span>Login</span>
                        }
                    </MudButton>
                </MudForm>
            </MudTabPanel>
            <MudTabPanel Text="Passkey" Icon="@Icons.Material.Filled.Fingerprint">
                <MudText Typo="Typo.body1" Class="mb-4">
                    Login using your device's biometric authenticator (FaceID, TouchID) or security key.
                </MudText>

                <MudForm>
                    <MudTextField @bind-Value="email"
                                  Label="Email"
                                  Variant="Variant.Outlined"
                                  Validation="@(new Func<string, string?>(ValidateOptionalEmail))"
                                  Immediate="true"
                                  UserAttributes="@(new Dictionary<string, object> { { "autocomplete", "webauthn" } })"
                                  Class="mb-4"/>

                    <MudButton Variant="Variant.Outlined"
                               StartIcon="@Icons.Material.Filled.Fingerprint"
                               Color="Color.Secondary"
                               FullWidth="true"
                               Size="Size.Large"
                               ButtonType="ButtonType.Button"
                               OnClick="LoginWithPasskey"
                               Disabled="isLoading"
                               Class="mb-4">
                        Sign in with Passkey
                    </MudButton>
                </MudForm>
            </MudTabPanel>
        </MudTabs>

        <MudDivider Class="my-4"/>

        <MudText Align="Align.Center">
            Don't have an account?
            <MudLink Href="/register" Color="Color.Primary">Register here</MudLink>
        </MudText>
        </MudPaper>
    </MudItem>
</MudGrid>
</div>

@code {
    MudForm? form;
    string email = string.Empty;
    string password = string.Empty;
    string? errorMessage;
    BookStore.Shared.Models.Error? lastError;
    string? resendMessage;
    bool isPasswordVisible;
    InputType PasswordInput = InputType.Password;
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
    bool isLoading;
    bool showResendVerification;

    string PasswordAriaLabel => isPasswordVisible ? "Hide Password" : "Show Password";

    void TogglePasswordVisibility()
    {
        isPasswordVisible = !isPasswordVisible;
        if (isPasswordVisible)
        {
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
        }
        else
        {
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
    }

    [SupplyParameterFromQuery] public string? ReturnUrl { get; set; }

    async Task LoginWithPasskey()
    {
        isLoading = true;
        errorMessage = null;
        lastError = null;

        try
        {
            Logger.LogInformation("Attempting passkey login");

            // 1. Get Options
            var optionsResult = await PasskeyService.GetLoginOptionsAsync(string.IsNullOrWhiteSpace(email) ? null : email);
            if (optionsResult.IsFailure)
            {
                lastError = optionsResult.Error;
                errorMessage = ErrorLocalizer.GetLocalizedMessage(optionsResult.Error);
                return;
            }

            var optionsJson = optionsResult.Value;
            if (string.IsNullOrWhiteSpace(optionsJson))
            {
                errorMessage = "Passkey options are missing.";
                return;
            }

            try
            {
                _ = System.Text.Json.JsonDocument.Parse(optionsJson);
            }
            catch
            {
                errorMessage = "Passkey options are invalid.";
                return;
            }

            // 2. JS WebAuthn Get
            var credentialJson = await Js.InvokeAsync<string>("passkey.login", optionsJson);

            // 3. Login on Server
            var result = await PasskeyService.LoginWithPasskeyAsync(credentialJson);

            if (result.IsSuccess)
            {
                Logger.LogInformation("Passkey login successful");
                await AuthStateProvider.NotifyUserAuthentication(result.Value.AccessToken!, result.Value.RefreshToken);

                // Notify other tabs via BroadcastChannel
                try
                {
                    await Js.InvokeVoidAsync("authBroadcast.notifyLogin");
                }
                catch (Exception ex)
                {
                    Logger.LogWarning("BroadcastChannel error: {Error}", ex.Message);
                }

                Navigation.NavigateTo(ReturnUrl ?? "/");
            }
            else
            {
                HandleLoginError(result.Error);
            }
        }
        catch (TaskCanceledException)
        {
            Logger.LogInformation("Passkey login was cancelled or timed out.");
            errorMessage = "Login was cancelled or timed out.";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Passkey login error");
            errorMessage = ErrorLocalizer.GetLocalizedMessage(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    async Task HandleLogin()
    {
        if (form == null)
        {
            return;
        }

        await form.Validate();
        if (!form.IsValid)
        {
            return;
        }

        isLoading = true;
        errorMessage = null;
        lastError = null;

        try
        {
            Logger.LogInformation("Attempting login for {Email}", email);
            var result = await AuthService.LoginAsync(email, password);

            if (result.IsSuccess)
            {
                Logger.LogInformation("Login successful, notifying auth state provider");

                // Notify the authentication state provider with the new token
                // This triggers UI updates for AuthorizeView and other auth-dependent components
                await AuthStateProvider.NotifyUserAuthentication(result.Value.AccessToken!, result.Value.RefreshToken);

                // Notify other tabs via BroadcastChannel
                try
                {
                    await Js.InvokeVoidAsync("authBroadcast.notifyLogin");
                }
                catch (Exception ex)
                {
                    Logger.LogWarning("BroadcastChannel error: {Error}", ex.Message);
                }

                Logger.LogInformation("Navigating to {ReturnUrl}", ReturnUrl ?? "/");

                // Navigate without forceLoad - state is already updated
                Navigation.NavigateTo(ReturnUrl ?? "/");
            }
            else
            {
                Logger.LogWarning("Login failed: {Error}", result.Error.Message);
                HandleLoginError(result.Error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Login exception: {Message}", ex.Message);
            errorMessage = ErrorLocalizer.GetLocalizedMessage(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    async Task HandleResendVerification()
    {
        if (string.IsNullOrEmpty(email))
        {
            errorMessage = "Please enter your email address first.";
            return;
        }

        isLoading = true;
        resendMessage = null;
        errorMessage = null;
        lastError = null;

        try
        {
            var result = await AuthService.ResendVerificationEmailAsync(email);
            if (result.IsSuccess)
            {
                resendMessage = "If an account exists for this email, a new verification link has been sent.";
                showResendVerification = false;
            }
            else
            {
                lastError = result.Error;
                errorMessage = ErrorLocalizer.GetLocalizedMessage(result.Error);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Resend verification error");
            errorMessage = "An error occurred while resending the verification email.";
        }
        finally
        {
            isLoading = false;
        }
    }

    void HandleLoginError(BookStore.Shared.Models.Error error)
    {
        lastError = error;
        errorMessage = ErrorLocalizer.GetLocalizedMessage(error);
        showResendVerification = error.Code == BookStore.Shared.Models.ErrorCodes.Auth.EmailUnconfirmed ||
                                 error.Message?.Contains("Requires verification") == true;
    }

    static string? ValidateEmail(string email) => EmailValidator.GetError(email);

    static string? ValidateOptionalEmail(string email)
        => string.IsNullOrWhiteSpace(email) ? null : EmailValidator.GetError(email);

}
