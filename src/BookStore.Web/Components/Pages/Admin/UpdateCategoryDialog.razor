@using BookStore.Client
@using BookStore.Shared.Models
@inject ICategoriesClient CategoriesClient
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1"/>
            Edit Category: @Category.Name
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="_form" @bind-IsValid="_success">
            <MudCard Elevation="0" Class="p-4 glass">
                <MudText Typo="Typo.subtitle1" Class="mb-2 fw-bold">Translations (Multi-language)</MudText>

                <div class="d-flex align-center gap-2 mb-4">
                    <LanguageSelector Value="@_selectedLanguage" ValueChanged="OnLanguageChanged" Margin="Margin.Dense"/>
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="AddOrUpdateTranslation" StartIcon="@Icons.Material.Filled.Add" Disabled="@(!CanAddOrUpdateTranslation())">
                        @(_translations.ContainsKey(_selectedLanguage) ? "Update" : "Add")
                    </MudButton>
                </div>

                <MudTextField T="string" Label="@($"Name ({_selectedLanguage})")" @bind-Value="_currentName"
                              Required="true" RequiredError="Name is required for the language!" Variant="Variant.Outlined" Immediate="true"/>

                <MudList T="string" Class="mt-2" Dense="true">
                    @foreach (var translation in _translations.OrderBy(t => t.Key))
                    {
                        <MudListItem Icon="@Icons.Material.Filled.Language">
                            <div class="d-flex align-center justify-space-between w-100">
                                <MudText Typo="Typo.body2">
                                    <b>@translation.Key:</b> @translation.Value
                                </MudText>
                                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(() => RemoveTranslation(translation.Key))" Disabled="@(translation.Key == "en")"/>
                            </div>
                        </MudListItem>
                    }
                </MudList>
                @if (!_translations.ContainsKey("en"))
                {
                    <MudAlert Severity="Severity.Warning" Class="mt-2">English translation is required!</MudAlert>
                }
            </MudCard>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!CanUpdate())">Update</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public AdminCategoryDto Category { get; set; } = null!;

    private MudForm _form = null!;
    private bool _success;

    private string _selectedLanguage = "en";
    private string _currentName = "";
    private Dictionary<string, string> _translations = new();

    // Store original values for change detection
    private Dictionary<string, string> _originalTranslations = new();

    protected override void OnInitialized()
    {
        if (Category.Translations != null)
        {
            foreach (var translation in Category.Translations)
            {
                _translations[translation.Key] = translation.Value.Name;
                _originalTranslations[translation.Key] = translation.Value.Name;
            }

            if (_translations.TryGetValue("en", out var enName))
            {
                _currentName = enName;
            }
        }
        else
        {
            _translations["en"] = Category.Name;
            _originalTranslations["en"] = Category.Name;
            _currentName = Category.Name;
        }
    }

    private void OnLanguageChanged(string lang)
    {
        _selectedLanguage = lang;
        _currentName = _translations.TryGetValue(lang, out var name) ? name : "";
        StateHasChanged();
    }

    private void AddOrUpdateTranslation()
    {
        if (string.IsNullOrWhiteSpace(_currentName)) return;
        _translations[_selectedLanguage] = _currentName;
        StateHasChanged();
    }

    private void RemoveTranslation(string lang)
    {
        _translations.Remove(lang);
        StateHasChanged();
    }

    private bool CanAddOrUpdateTranslation()
    {
        if (string.IsNullOrWhiteSpace(_currentName))
            return false;

        // Check if the current name is different from the stored one
        if (!_translations.TryGetValue(_selectedLanguage, out var existingName))
            return true; // New translation, allow adding

        return _currentName != existingName; // Only enable if changed
    }

    private bool HasChanges()
    {
        // Check if translations changed
        if (_translations.Count != _originalTranslations.Count)
            return true;

        foreach (var kvp in _translations)
        {
            if (!_originalTranslations.TryGetValue(kvp.Key, out var originalValue) || originalValue != kvp.Value)
                return true;
        }

        return false;
    }

    private bool CanUpdate()
    {
        return _success &&
               _translations.ContainsKey("en") &&
               !string.IsNullOrWhiteSpace(_translations["en"]) &&
               HasChanges();
    }

    private async Task Submit()
    {
        await _form.Validate();
        if (!_translations.ContainsKey("en")) return;

        try
        {
            var updatedTranslations = _translations.ToDictionary(
                kvp => kvp.Key,
                kvp => new CategoryTranslationDto(kvp.Value)
            );

            var request = new UpdateCategoryRequest { Translations = updatedTranslations };
            await CategoriesClient.UpdateCategoryAsync(Category.Id, request);

            Snackbar.Add("Category updated successfully.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
