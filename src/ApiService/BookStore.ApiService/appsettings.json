{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Warning",
      "System.Net.Http.HttpClient": "Warning",
      "Marten": "Information",
      "Wolverine": "Information",
      "BookStore": "Information"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-ddTHH:mm:ss.fffZ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": false
        }
      }
    }
  },
  "AllowedHosts": "*",
  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100
  },
  "Localization": {
    "DefaultCulture": "en",
    "SupportedCultures": [
      "pt",
      "en",
      "fr",
      "de",
      "es"
    ]
  },
  "Authentication": {
    "Passkey": {
      "ServerDomain": "localhost"
    }
  }
}