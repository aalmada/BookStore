@page "/login"
@using BookStore.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@inject AuthenticationService AuthService
@inject PasskeyService PasskeyService
@inject JwtAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject ILogger<Login> Logger
@rendermode InteractiveServer

<PageTitle>Login - BookStore</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="4" Class="pa-8" Style="border-radius: 12px;">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Class="mr-2" />
            Login
        </MudText>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">@errorMessage</MudAlert>
        }

        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="px-4 py-6">
            <MudTabPanel Text="Standard" Icon="@Icons.Material.Filled.Email">
                <MudForm @ref="form">
                    <MudTextField @bind-Value="email"
                                  Label="Email"
                                  Variant="Variant.Outlined"
                                  Required="true"
                                  RequiredError="Email is required"
                                  Validation="@(new Func<string, string?>(ValidateEmail))"
                                  Class="mb-4" />

                    <MudTextField @bind-Value="password"
                                  Label="Password"
                                  Variant="Variant.Outlined"
                                  InputType="InputType.Password"
                                  Required="true"
                                  RequiredError="Password is required"
                                  Class="mb-4" />

                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               FullWidth="true"
                               Size="Size.Large"
                               OnClick="HandleLogin"
                               Disabled="isLoading"
                               Class="mb-4">
                        @if (isLoading)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                            <span>Logging in...</span>
                        }
                        else
                        {
                            <span>Login</span>
                        }
                    </MudButton>
                </MudForm>
            </MudTabPanel>
            <MudTabPanel Text="Passkey" Icon="@Icons.Material.Filled.Fingerprint">
                <MudText Typo="Typo.body1" Class="mb-4">
                    Login using your device's biometric authenticator (FaceID, TouchID) or security key.
                </MudText>
                
                <MudForm>
                    <MudTextField @bind-Value="email"
                                  Label="Email"
                                  Variant="Variant.Outlined"
                                  Required="true"
                                  RequiredError="Email is required"
                                  Validation="@(new Func<string, string?>(ValidateEmail))"
                                  Immediate="true"
                                  Class="mb-4" />

                    <MudButton Variant="Variant.Outlined"
                               StartIcon="@Icons.Material.Filled.Fingerprint"
                               Color="Color.Secondary"
                               FullWidth="true"
                               Size="Size.Large"
                               OnClick="LoginWithPasskey"
                               Disabled="isLoading"
                               Class="mb-4">
                        Sign in with Passkey
                    </MudButton>
                </MudForm>
            </MudTabPanel>
        </MudTabs>

        <MudDivider Class="my-4" />

        <MudText Align="Align.Center">
            Don't have an account?
            <MudLink Href="/register" Color="Color.Primary">Register here</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    MudForm? form;
    string email = string.Empty;
    string password = string.Empty;
    string? errorMessage;
    bool isLoading;

    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    async Task LoginWithPasskey()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            Logger.LogInformation("Attempting passkey login");
            
            // 1. Get Options
            var optionsJson = await PasskeyService.GetLoginOptionsAsync(email); 
            if (string.IsNullOrEmpty(optionsJson))
            {
                errorMessage = "Passkey login not supported or failed to initialize.";
                return;
            }
            
            // 2. JS WebAuthn Get
            var credentialJson = await JS.InvokeAsync<string>("passkey.login", optionsJson);
            
            // 3. Login on Server
            var result = await PasskeyService.LoginWithPasskeyAsync(credentialJson);
            
            if (result != null && result.Success && !string.IsNullOrEmpty(result.AccessToken))
            {
                 Logger.LogInformation("Passkey login successful");
                 AuthStateProvider.NotifyUserAuthentication(result.AccessToken);
                 Navigation.NavigateTo(ReturnUrl ?? "/");
            }
            else
            {
                errorMessage = result?.Error ?? "Passkey login failed.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Passkey login error");
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    async Task HandleLogin()
    {
        if (form == null)
        {
            return;
        }

        await form.Validate();
        if (!form.IsValid)
        {
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            Logger.LogInformation("Attempting login for {Email}", email);
            var result = await AuthService.LoginAsync(email, password);

            if (result.Success && result.AccessToken != null)
            {
                Logger.LogInformation("Login successful, notifying auth state provider");
                
                // Notify the authentication state provider with the new token
                // This triggers UI updates for AuthorizeView and other auth-dependent components
                AuthStateProvider.NotifyUserAuthentication(result.AccessToken);
                
                // Notify other tabs via BroadcastChannel
                try
                {
                    await JS.InvokeVoidAsync("authBroadcast.notifyLogin");
                }
                catch (Exception ex)
                {
                    Logger.LogWarning("BroadcastChannel error: {Error}", ex.Message);
                }
                
                Logger.LogInformation("Navigating to {ReturnUrl}", ReturnUrl ?? "/");
                
                // Navigate without forceLoad - state is already updated
                Navigation.NavigateTo(ReturnUrl ?? "/");
            }
            else
            {
                Logger.LogWarning("Login failed: {Error}", result.Error);
                errorMessage = result.Error ?? "Login failed";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Login exception: {Message}", ex.Message);
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    static string? ValidateEmail(string email)
    {
        if (string.IsNullOrWhiteSpace(email))
        {
            return "Email is required";
        }

        if (!email.Contains('@'))
        {
            return "Invalid email format";
        }

        return null;
    }
}
