{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "src/**/*.csproj"
                    ],
                    "exclude": [
                        "**/obj/**",
                        "**/bin/**",
                        "**/*.Tests/**",
                        "**/BookStore.Web/**",
                        "**/BookStore.AppHost/**"
                    ]
                }
            ],
            "dest": "api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "docs/**.md",
                    "docs/**/toc.yml",
                    "toc.yml",
                    "*.md",
                    "LICENSE"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**",
                    "**/bin/**",
                    "**/obj/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md",
                    "apidoc/**/toc.yml"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appTitle": "BookStore Documentation",
            "_appName": "BookStore",
            "_appLogoPath": "images/logo.svg",
            "_appFaviconPath": "images/favicon.png",
            "_description": "Documentation for BookStore - An event-sourced bookstore application built with .NET 10, Aspire, Blazor, Marten, and Wolverine",
            "_keywords": "bookstore, event-sourcing, marten, wolverine, aspire, blazor, cqrs, dotnet",
            "_enableSearch": true,
            "_enableNewTab": true,
            "_appFooter": "<span>Â© 2025 Antao Almada | Licensed under <a href=\"https://github.com/aalmada/BookStore/blob/main/LICENSE\">MIT License</a> | Made with <a href=\"https://dotnet.github.io/docfx\">docfx</a></span>",
            "_gitContribute": {
                "repo": "https://github.com/aalmada/BookStore",
                "branch": "main"
            },
            "_gitUrlPattern": "github",
            "_baseUrl": "https://aalmada.github.io/BookStore/",
            "_appOgImage": "images/og-image.png"
        },
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default",
            "modern",
            "template"
        ],
        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false,
        "sitemap": {
            "baseUrl": "https://aalmada.github.io/BookStore/",
            "priority": 0.1,
            "changefreq": "daily",
            "fileOptions": {
                "**/index.md": {
                    "priority": 0.8
                }
            }
        }
    }
}